<div class="grid-row margin-top-7">
  <div class="grid-column">
    <fieldset>
      <legend>
        <h1>
          Are you a British citizen or UK resident?
        </h1>
      </legend>


      <%= form_row for: [signature, :uk_citizenship] do %>
        <span class="form-hint">
          Only British citizens or UK residents have the right toÂ sign petition
        </span>

        <%= error_messages_for_field form.object, :uk_citizenship %>

        <div class="multiple-choice">
          <%= form.radio_button :uk_citizenship, "1" %>
          <%= form.label :uk_citizenship, "Yes", for: "signature_uk_citizenship_1" %>
        </div>
        <div class="multiple-choice">
          <%= form.radio_button :uk_citizenship, "0" %>
          <%= form.label :uk_citizenship, "No", for: "signature_uk_citizenship_0" %>
        </div>
      <% end %>
    </fieldset>

    <div class="button-group">
      <%= form.button "Continue", class: "button" %>
    </div>
  </div>
</div>
