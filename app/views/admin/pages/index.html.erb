<h1>Edit Site</h1>

<div class="grid-row">
  <div class="grid-column">
    <%= render "admin/shared/site_tabs" %>
  </div>
</div>
<div class="grid-row">
  <div class="grid-column">
    <table class="page-list">
      <thead>
        <tr>
          <th>Slug</th>
          <th>Title</th>
          <th>Enabled</th>
          <th>Redirect</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @pages.each do |page| %>
          <tr class="page">
            <td><%= page.slug %></td>
            <td><%= page.title %></td>
            <td><%= page.enabled ? 'Yes' : 'No' %></td>
            <td>
              <% if page.redirect? %>
                <%= link_to 'Yes', page.redirect_url, target: '_blank' %>
              <% else %>
                No
              <% end %>
            </td>
            <td>
              <%= link_to 'Edit', edit_admin_page_path(page), class: 'button' %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
